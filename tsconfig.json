{
  "compilerOptions": {
    "preserveConstEnums": true,
    // "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "ES2020",
    "outDir": ".build",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "./",
    "lib": ["ES2020"],
    "typeRoots": [
      "node_modules/@types",
      "./types"
    ],
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    ".build"
  ]
}